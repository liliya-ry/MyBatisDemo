<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE configuration>
<configuration>
    <properties resource='D:\IdeaProjects\MyBatisDemo\src\resources\jdbc.properties'/>
<!--        <property name='jdbc.driverClassName' value='#{org.mariadb.jdbc.Driver}'/>-->
<!--        <property name='jdbc.url' value='#{jdbc:mariadb://localhost:3307/HR}'/>-->
<!--        <property name='jdbc.username' value='#{root}'/>-->
<!--        <property name='jdbc.password' value='#{1234}'/>-->
    <typeAliases>
        <typeAlias type='domain.Employee' alias='Employee'/>
    </typeAliases>
    <environments default='development'>
        <environment id='development'>
            <transactionManager type='JDBC'/>
            <dataSource type='UNPOOLED'>
                <property name='driver' value='${jdbc.driverClassName}'/>
                <property name='url' value='${jdbc.url}'/>
                <property name='username' value='${jdbc.username}'/>
                <property name='password' value='${jdbc.password}'/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource='src/mappers/EmployeeMapper.xml'/>
    </mappers>
</configuration>